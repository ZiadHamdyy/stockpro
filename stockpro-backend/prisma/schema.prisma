generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id @default(uuid())
  email         String  @unique
  name          String?
  image         String?
  password      String?
  emailVerified Boolean @default(true)
  active        Boolean @default(true)

  // Role relationship
  roleId String?
  role   Role?   @relation(fields: [roleId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Session Session[]
  Otp     Otp[]
  Store   Store[]
  
  // Warehouse operations
  storeReceiptVouchers StoreReceiptVoucher[]
  storeIssueVouchers   StoreIssueVoucher[]
  storeTransferVouchers StoreTransferVoucher[]
}

model Session {
  id           String        @id @default(uuid())
  status       SessionStatus @default(ACTIVE)
  refreshToken String?

  ipAddress String?
  userAgent String?

  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum SessionStatus {
  ACTIVE
  INACTIVE
}

model Otp {
  id           String   @id @default(uuid())
  otpHash      String
  otpExpiresAt DateTime
  otpVerified  Boolean  @default(false)

  type   OtpType
  userId String
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([otpExpiresAt])
}

enum OtpType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
}

model Role {
  id          String  @id @default(uuid())
  name        String  @unique
  description String?
  isSystem    Boolean @default(false) // Prevents deletion of system roles

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  users           User[]
  rolePermissions RolePermission[]
}

model Permission {
  id          String  @id @default(uuid())
  resource    String // e.g., "sales", "items", "reports"
  action      String // e.g., "create", "read", "update", "delete", "view"
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  rolePermissions RolePermission[]

  @@unique([resource, action])
  @@index([resource])
}

model RolePermission {
  id           String @id @default(uuid())
  roleId       String
  permissionId String

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([roleId, permissionId])
  @@index([roleId])
  @@index([permissionId])
}

model ItemGroup {
  id          String  @id @default(uuid())
  name        String  @unique
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  items Item[]
}

model Unit {
  id          String  @id @default(uuid())
  name        String  @unique
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  items Item[]
}

model Item {
  id            String  @id @default(uuid())
  code          String  @unique
  barcode       String?
  name          String
  purchasePrice Float
  salePrice     Float
  stock         Float   @default(0)
  reorderLimit  Float   @default(0)

  // Foreign keys
  groupId String
  unitId  String

  // Relationships
  group ItemGroup @relation(fields: [groupId], references: [id])
  unit  Unit      @relation(fields: [unitId], references: [id])

  // Warehouse operations
  storeReceiptVoucherItems StoreReceiptVoucherItem[]
  storeIssueVoucherItems   StoreIssueVoucherItem[]
  storeTransferVoucherItems StoreTransferVoucherItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
  @@index([barcode])
  @@index([groupId])
  @@index([unitId])
}

model Company {
  id            String  @id @default(uuid())
  name          String
  activity      String
  address       String
  phone         String
  taxNumber     String
  commercialReg String
  currency      String
  capital       Float
  vatRate       Float   @default(0)
  isVatEnabled  Boolean @default(false)
  logoPath      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Bank {
  id             String  @id @default(uuid())
  code           String  @unique
  name           String
  accountNumber  String
  iban           String
  openingBalance Float   @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
}

model Customer {
  id             String  @id @default(uuid())
  code           String  @unique
  name           String
  commercialReg  String
  taxNumber      String
  nationalAddress String
  phone          String
  openingBalance Float   @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
}

model Supplier {
  id             String  @id @default(uuid())
  code           String  @unique
  name           String
  commercialReg  String
  taxNumber      String
  nationalAddress String
  phone          String
  openingBalance Float   @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
}

model Branch {
  id          String  @id @default(uuid())
  name        String
  address     String?
  phone       String?
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  stores Store[]
}

model Store {
  id          String  @id @default(uuid())
  name        String
  address     String?
  phone       String?
  description String?

  // Foreign keys
  branchId String
  userId   String

  // Relationships
  branch Branch @relation(fields: [branchId], references: [id])
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Warehouse operations
  storeReceiptVouchers StoreReceiptVoucher[]
  storeIssueVouchers   StoreIssueVoucher[]
  fromTransfers        StoreTransferVoucher[] @relation("FromStore")
  toTransfers          StoreTransferVoucher[] @relation("ToStore")
}

model StoreReceiptVoucher {
  id          String   @id @default(uuid())
  voucherNumber String @unique
  date        DateTime @default(now())
  notes       String?
  totalAmount Float    @default(0)

  // Foreign keys
  storeId String
  userId  String

  // Relationships
  store Store @relation(fields: [storeId], references: [id])
  user  User  @relation(fields: [userId], references: [id])
  items StoreReceiptVoucherItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([voucherNumber])
  @@index([date])
  @@index([storeId])
}

model StoreIssueVoucher {
  id          String   @id @default(uuid())
  voucherNumber String @unique
  date        DateTime @default(now())
  notes       String?
  totalAmount Float    @default(0)

  // Foreign keys
  storeId String
  userId  String

  // Relationships
  store Store @relation(fields: [storeId], references: [id])
  user  User  @relation(fields: [userId], references: [id])
  items StoreIssueVoucherItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([voucherNumber])
  @@index([date])
  @@index([storeId])
}

model StoreTransferVoucher {
  id          String   @id @default(uuid())
  voucherNumber String @unique
  date        DateTime @default(now())
  notes       String?
  totalAmount Float    @default(0)

  // Foreign keys
  fromStoreId String
  toStoreId   String
  userId      String

  // Relationships
  fromStore Store @relation("FromStore", fields: [fromStoreId], references: [id])
  toStore   Store @relation("ToStore", fields: [toStoreId], references: [id])
  user      User  @relation(fields: [userId], references: [id])
  items     StoreTransferVoucherItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([voucherNumber])
  @@index([date])
  @@index([fromStoreId])
  @@index([toStoreId])
}

model StoreReceiptVoucherItem {
  id          String @id @default(uuid())
  quantity    Float
  unitPrice   Float
  totalPrice  Float

  // Foreign keys
  voucherId String
  itemId    String

  // Relationships
  voucher StoreReceiptVoucher @relation(fields: [voucherId], references: [id], onDelete: Cascade)
  item    Item                @relation(fields: [itemId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([voucherId])
  @@index([itemId])
}

model StoreIssueVoucherItem {
  id          String @id @default(uuid())
  quantity    Float
  unitPrice   Float
  totalPrice  Float

  // Foreign keys
  voucherId String
  itemId    String

  // Relationships
  voucher StoreIssueVoucher @relation(fields: [voucherId], references: [id], onDelete: Cascade)
  item    Item              @relation(fields: [itemId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([voucherId])
  @@index([itemId])
}

model StoreTransferVoucherItem {
  id          String @id @default(uuid())
  quantity    Float
  unitPrice   Float
  totalPrice  Float

  // Foreign keys
  voucherId String
  itemId    String

  // Relationships
  voucher StoreTransferVoucher @relation(fields: [voucherId], references: [id], onDelete: Cascade)
  item    Item                 @relation(fields: [itemId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([voucherId])
  @@index([itemId])
}

model CurrentAccount {
  id             String   @id @default(uuid())
  code           String   @unique
  name           String
  type           String
  openingBalance Float    @default(0)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
}
