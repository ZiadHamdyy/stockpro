generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id @default(uuid())
  code          Int     @unique
  email         String  @unique
  name          String?
  image         Bytes?
  password      String?
  emailVerified Boolean @default(true)
  active        Boolean @default(true)

  // Role relationship
  roleId String?
  role   Role?   @relation(fields: [roleId], references: [id])

  // Branch relationship
  branchId String
  branch   Branch @relation(fields: [branchId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Session Session[]
  Otp     Otp[]
  Store   Store[]

  // Warehouse operations
  storeReceiptVouchers  StoreReceiptVoucher[]
  storeIssueVouchers    StoreIssueVoucher[]
  storeTransferVouchers StoreTransferVoucher[]

  // Sales operations
  salesInvoices SalesInvoice[]
  salesReturns  SalesReturn[]

  // Purchase operations
  purchaseInvoices PurchaseInvoice[]
  purchaseReturns  PurchaseReturn[]

  // Payment vouchers
  paymentVouchers PaymentVoucher[]

  // Receipt vouchers
  receiptVouchers ReceiptVoucher[]

  // Internal transfers
  internalTransfers InternalTransfer[]
}

model Session {
  id           String        @id @default(uuid())
  status       SessionStatus @default(ACTIVE)
  refreshToken String?

  ipAddress String?
  userAgent String?

  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum SessionStatus {
  ACTIVE
  INACTIVE
}

model Otp {
  id           String   @id @default(uuid())
  otpHash      String
  otpExpiresAt DateTime
  otpVerified  Boolean  @default(false)

  type   OtpType
  userId String
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([otpExpiresAt])
}

enum OtpType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
}

model Role {
  id          String  @id @default(uuid())
  name        String  @unique
  description String?
  isSystem    Boolean @default(false) // Prevents deletion of system roles

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  users           User[]
  rolePermissions RolePermission[]
}

model Permission {
  id          String  @id @default(uuid())
  resource    String // e.g., "sales", "items", "reports"
  action      String // e.g., "create", "read", "update", "delete", "view"
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  rolePermissions RolePermission[]

  @@unique([resource, action])
  @@index([resource])
}

model RolePermission {
  id           String @id @default(uuid())
  roleId       String
  permissionId String

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([roleId, permissionId])
  @@index([roleId])
  @@index([permissionId])
}

model ItemGroup {
  id          String  @id @default(uuid())
  code        Int     @unique @default(autoincrement())
  name        String  @unique
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  items Item[]
}

model Unit {
  id          String  @id @default(uuid())
  code        Int     @unique @default(autoincrement())
  name        String  @unique
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  items Item[]
}

model Item {
  id            String   @id @default(uuid())
  code          String   @unique
  barcode       String?
  name          String
  purchasePrice Float
  salePrice     Float    @default(0)
  stock         Float    @default(0)
  reorderLimit  Float    @default(0)
  type          ItemType @default(STOCKED)

  // Foreign keys
  groupId String
  unitId  String

  // Relationships
  group ItemGroup @relation(fields: [groupId], references: [id])
  unit  Unit      @relation(fields: [unitId], references: [id])

  // Warehouse operations
  storeReceiptVoucherItems  StoreReceiptVoucherItem[]
  storeIssueVoucherItems    StoreIssueVoucherItem[]
  storeTransferVoucherItems StoreTransferVoucherItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
  @@index([barcode])
  @@index([groupId])
  @@index([unitId])
}

enum ItemType {
  STOCKED
  SERVICE
}

model Company {
  id            String  @id @default(uuid())
  name          String
  activity      String
  address       String
  phone         String
  taxNumber     String
  commercialReg String
  currency      String
  capital       Float
  vatRate       Float   @default(0)
  isVatEnabled  Boolean @default(false)
  logo          Bytes?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Bank {
  id             String @id @default(uuid())
  code           String @unique
  name           String
  accountNumber  String
  iban           String
  openingBalance Float  @default(0)
  currentBalance Float  @default(0)

  // Relationships
  paymentVouchers PaymentVoucher[]
  receiptVouchers ReceiptVoucher[]
  fromTransfers   InternalTransfer[] @relation("FromBankTransfers")
  toTransfers     InternalTransfer[] @relation("ToBankTransfers")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
}

model Safe {
  id             String @id @default(uuid())
  code           String @unique
  name           String
  branchId       String
  openingBalance Float  @default(0)
  currentBalance Float  @default(0)

  // Relationships
  branch          Branch             @relation(fields: [branchId], references: [id])
  paymentVouchers PaymentVoucher[]
  receiptVouchers ReceiptVoucher[]
  fromTransfers   InternalTransfer[] @relation("FromSafeTransfers")
  toTransfers     InternalTransfer[] @relation("ToSafeTransfers")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
  @@index([branchId])
  @@unique([branchId])
}

model Customer {
  id              String @id @default(uuid())
  code            String @unique
  name            String
  commercialReg   String
  taxNumber       String
  nationalAddress String
  phone           String
  openingBalance  Float  @default(0)
  currentBalance  Float  @default(0)

  // Relationships
  salesInvoices   SalesInvoice[]
  salesReturns    SalesReturn[]
  paymentVouchers PaymentVoucher[]
  receiptVouchers ReceiptVoucher[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
}

model Supplier {
  id              String @id @default(uuid())
  code            String @unique
  name            String
  commercialReg   String
  taxNumber       String
  nationalAddress String
  phone           String
  openingBalance  Float  @default(0)
  currentBalance  Float  @default(0)

  // Relationships
  purchaseInvoices PurchaseInvoice[]
  purchaseReturns  PurchaseReturn[]
  paymentVouchers  PaymentVoucher[]
  receiptVouchers  ReceiptVoucher[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
}

model Branch {
  id          String  @id @default(uuid())
  code        Int     @unique
  name        String
  address     String?
  phone       String?
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  users             User[]
  stores            Store[]
  safes             Safe[]
  salesInvoices     SalesInvoice[]
  salesReturns      SalesReturn[]
  purchaseInvoices  PurchaseInvoice[]
  purchaseReturns   PurchaseReturn[]
  paymentVouchers   PaymentVoucher[]
  receiptVouchers   ReceiptVoucher[]
  internalTransfers InternalTransfer[]
}

model Store {
  id          String  @id @default(uuid())
  code        Int     @unique
  name        String
  address     String?
  phone       String?
  description String?

  // Foreign keys
  branchId String
  userId   String

  // Relationships
  branch Branch @relation(fields: [branchId], references: [id])
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Warehouse operations
  storeReceiptVouchers StoreReceiptVoucher[]
  storeIssueVouchers   StoreIssueVoucher[]
  fromTransfers        StoreTransferVoucher[] @relation("FromStore")
  toTransfers          StoreTransferVoucher[] @relation("ToStore")

  @@unique([branchId])
  @@index([branchId])
}

model StoreReceiptVoucher {
  id            String   @id @default(uuid())
  voucherNumber String   @unique
  date          DateTime @default(now())
  notes         String?
  totalAmount   Float    @default(0)

  // Foreign keys
  storeId String
  userId  String

  // Relationships
  store Store                     @relation(fields: [storeId], references: [id])
  user  User                      @relation(fields: [userId], references: [id])
  items StoreReceiptVoucherItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([voucherNumber])
  @@index([date])
  @@index([storeId])
}

model StoreIssueVoucher {
  id            String   @id @default(uuid())
  voucherNumber String   @unique
  date          DateTime @default(now())
  notes         String?
  totalAmount   Float    @default(0)

  // Foreign keys
  storeId String
  userId  String

  // Relationships
  store Store                   @relation(fields: [storeId], references: [id])
  user  User                    @relation(fields: [userId], references: [id])
  items StoreIssueVoucherItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([voucherNumber])
  @@index([date])
  @@index([storeId])
}

model StoreTransferVoucher {
  id            String   @id @default(uuid())
  voucherNumber String   @unique
  date          DateTime @default(now())
  notes         String?
  totalAmount   Float    @default(0)

  // Foreign keys
  fromStoreId String
  toStoreId   String
  userId      String

  // Relationships
  fromStore Store                      @relation("FromStore", fields: [fromStoreId], references: [id])
  toStore   Store                      @relation("ToStore", fields: [toStoreId], references: [id])
  user      User                       @relation(fields: [userId], references: [id])
  items     StoreTransferVoucherItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([voucherNumber])
  @@index([date])
  @@index([fromStoreId])
  @@index([toStoreId])
}

model StoreReceiptVoucherItem {
  id         String @id @default(uuid())
  quantity   Float
  unitPrice  Float
  totalPrice Float

  // Foreign keys
  voucherId String
  itemId    String

  // Relationships
  voucher StoreReceiptVoucher @relation(fields: [voucherId], references: [id], onDelete: Cascade)
  item    Item                @relation(fields: [itemId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([voucherId])
  @@index([itemId])
}

model StoreIssueVoucherItem {
  id         String @id @default(uuid())
  quantity   Float
  unitPrice  Float
  totalPrice Float

  // Foreign keys
  voucherId String
  itemId    String

  // Relationships
  voucher StoreIssueVoucher @relation(fields: [voucherId], references: [id], onDelete: Cascade)
  item    Item              @relation(fields: [itemId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([voucherId])
  @@index([itemId])
}

model StoreTransferVoucherItem {
  id         String @id @default(uuid())
  quantity   Float
  unitPrice  Float
  totalPrice Float

  // Foreign keys
  voucherId String
  itemId    String

  // Relationships
  voucher StoreTransferVoucher @relation(fields: [voucherId], references: [id], onDelete: Cascade)
  item    Item                 @relation(fields: [itemId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([voucherId])
  @@index([itemId])
}

model CurrentAccount {
  id             String @id @default(uuid())
  code           String @unique
  name           String
  type           String
  openingBalance Float  @default(0)
  currentBalance Float  @default(0)

  // Relationships
  paymentVouchers PaymentVoucher[]
  receiptVouchers ReceiptVoucher[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
}

model ReceivableAccount {
  id             String @id @default(uuid())
  code           String @unique
  name           String
  openingBalance Float  @default(0)
  currentBalance Float  @default(0)

  // Relationships
  paymentVouchers PaymentVoucher[]
  receiptVouchers ReceiptVoucher[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
}

model PayableAccount {
  id             String @id @default(uuid())
  code           String @unique
  name           String
  openingBalance Float  @default(0)
  currentBalance Float  @default(0)

  // Relationships
  paymentVouchers PaymentVoucher[]
  receiptVouchers ReceiptVoucher[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
}

model ExpenseType {
  id          String  @id @default(uuid())
  name        String  @unique
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  expenseCodes ExpenseCode[]
}

model ExpenseCode {
  id          String  @id @default(uuid())
  code        String  @unique
  name        String
  description String?

  // Foreign keys
  expenseTypeId String

  // Relationships
  expenseType ExpenseType @relation(fields: [expenseTypeId], references: [id])
  expenses    Expense[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  paymentVouchers PaymentVoucher[]

  @@index([code])
  @@index([expenseTypeId])
}

model Expense {
  id          String   @id @default(uuid())
  code        String   @unique
  date        DateTime
  description String?

  // Foreign keys
  expenseCodeId String

  // Relationships
  expenseCode ExpenseCode @relation(fields: [expenseCodeId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
  @@index([date])
  @@index([expenseCodeId])
}

model SalesInvoice {
  id                String   @id @default(uuid())
  code              String   @unique
  date              DateTime @default(now())
  customerId        String?
  items             Json // Array of invoice items
  subtotal          Float    @default(0)
  discount          Float    @default(0)
  tax               Float    @default(0)
  net               Float    @default(0)
  paymentMethod     String // "cash" or "credit"
  paymentTargetType String? // "safe" or "bank"
  paymentTargetId   String?
  notes             String?

  // Foreign keys
  userId   String
  branchId String?

  // Relationships
  customer Customer? @relation(fields: [customerId], references: [id])
  user     User      @relation(fields: [userId], references: [id])
  branch   Branch?   @relation(fields: [branchId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
  @@index([date])
  @@index([customerId])
  @@index([userId])
}

model SalesReturn {
  id                String   @id @default(uuid())
  code              String   @unique
  date              DateTime @default(now())
  customerId        String?
  items             Json // Array of return items
  subtotal          Float    @default(0)
  discount          Float    @default(0)
  tax               Float    @default(0)
  net               Float    @default(0)
  paymentMethod     String // "cash" or "credit"
  paymentTargetType String? // "safe" or "bank"
  paymentTargetId   String?
  notes             String?

  // Foreign keys
  userId   String
  branchId String?

  // Relationships
  customer Customer? @relation(fields: [customerId], references: [id])
  user     User      @relation(fields: [userId], references: [id])
  branch   Branch?   @relation(fields: [branchId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
  @@index([date])
  @@index([customerId])
  @@index([userId])
}

model PurchaseInvoice {
  id                String   @id @default(uuid())
  code              String   @unique
  date              DateTime @default(now())
  supplierId        String?
  items             Json // Array of invoice items
  subtotal          Float    @default(0)
  discount          Float    @default(0)
  tax               Float    @default(0)
  net               Float    @default(0)
  paymentMethod     String // "cash" or "credit"
  paymentTargetType String? // "safe" or "bank"
  paymentTargetId   String?
  notes             String?

  // Foreign keys
  userId   String
  branchId String?

  // Relationships
  supplier Supplier? @relation(fields: [supplierId], references: [id])
  user     User      @relation(fields: [userId], references: [id])
  branch   Branch?   @relation(fields: [branchId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
  @@index([date])
  @@index([supplierId])
  @@index([userId])
}

model PurchaseReturn {
  id                String   @id @default(uuid())
  code              String   @unique
  date              DateTime @default(now())
  supplierId        String?
  items             Json // Array of return items
  subtotal          Float    @default(0)
  discount          Float    @default(0)
  tax               Float    @default(0)
  net               Float    @default(0)
  paymentMethod     String // "cash" or "credit"
  paymentTargetType String? // "safe" or "bank"
  paymentTargetId   String?
  notes             String?

  // Foreign keys
  userId   String
  branchId String?

  // Relationships
  supplier Supplier? @relation(fields: [supplierId], references: [id])
  user     User      @relation(fields: [userId], references: [id])
  branch   Branch?   @relation(fields: [branchId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
  @@index([date])
  @@index([supplierId])
  @@index([userId])
}

model PaymentVoucher {
  id            String   @id @default(uuid())
  code          String   @unique
  date          DateTime @default(now())
  entityType    String // "customer", "supplier", "current_account", "expense"
  entityName    String
  amount        Float
  description   String?
  paymentMethod String // "safe" or "bank"
  safeId        String?
  bankId        String?

  // Entity foreign keys (polymorphic relation)
  customerId       String?
  supplierId       String?
  currentAccountId String?
  expenseCodeId    String?
  receivableAccountId String?
  payableAccountId    String?

  // Foreign keys
  userId   String
  branchId String?

  // Relationships
  user           User            @relation(fields: [userId], references: [id])
  branch         Branch?         @relation(fields: [branchId], references: [id])
  safe           Safe?           @relation(fields: [safeId], references: [id])
  bank           Bank?           @relation(fields: [bankId], references: [id])
  customer       Customer?       @relation(fields: [customerId], references: [id])
  supplier       Supplier?       @relation(fields: [supplierId], references: [id])
  currentAccount CurrentAccount? @relation(fields: [currentAccountId], references: [id])
  expenseCode    ExpenseCode?    @relation(fields: [expenseCodeId], references: [id])
  receivableAccount ReceivableAccount? @relation(fields: [receivableAccountId], references: [id])
  payableAccount    PayableAccount?    @relation(fields: [payableAccountId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
  @@index([date])
  @@index([entityType])
  @@index([userId])
  @@index([receivableAccountId])
  @@index([payableAccountId])
}

model ReceiptVoucher {
  id            String   @id @default(uuid())
  code          String   @unique
  date          DateTime @default(now())
  entityType    String // "customer", "supplier", "current_account"
  entityName    String
  amount        Float
  description   String?
  paymentMethod String // "safe" or "bank"
  safeId        String?
  bankId        String?

  // Entity foreign keys (polymorphic relation)
  customerId       String?
  supplierId       String?
  currentAccountId String?
  receivableAccountId String?
  payableAccountId    String?

  // Foreign keys
  userId   String
  branchId String?

  // Relationships
  user           User            @relation(fields: [userId], references: [id])
  branch         Branch?         @relation(fields: [branchId], references: [id])
  safe           Safe?           @relation(fields: [safeId], references: [id])
  bank           Bank?           @relation(fields: [bankId], references: [id])
  customer       Customer?       @relation(fields: [customerId], references: [id])
  supplier       Supplier?       @relation(fields: [supplierId], references: [id])
  currentAccount CurrentAccount? @relation(fields: [currentAccountId], references: [id])
  receivableAccount ReceivableAccount? @relation(fields: [receivableAccountId], references: [id])
  payableAccount    PayableAccount?    @relation(fields: [payableAccountId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
  @@index([date])
  @@index([entityType])
  @@index([userId])
  @@index([receivableAccountId])
  @@index([payableAccountId])
}

model InternalTransfer {
  id          String   @id @default(uuid())
  code        String   @unique
  date        DateTime @default(now())
  amount      Float
  description String?
  fromType    String // "safe" or "bank"
  toType      String // "safe" or "bank"
  fromSafeId  String?
  fromBankId  String?
  toSafeId    String?
  toBankId    String?

  // Foreign keys
  userId   String
  branchId String?

  // Relationships
  user     User    @relation(fields: [userId], references: [id])
  branch   Branch? @relation(fields: [branchId], references: [id])
  fromSafe Safe?   @relation("FromSafeTransfers", fields: [fromSafeId], references: [id])
  fromBank Bank?   @relation("FromBankTransfers", fields: [fromBankId], references: [id])
  toSafe   Safe?   @relation("ToSafeTransfers", fields: [toSafeId], references: [id])
  toBank   Bank?   @relation("ToBankTransfers", fields: [toBankId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
  @@index([date])
  @@index([userId])
}
